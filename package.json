    "**/*.+(css|sass|less|scss|json|html)": [
      "prettier --write"
    ]
  },
  "directories": {
    "example": "example"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "jest-environment-jsdom": "^29.5.0"

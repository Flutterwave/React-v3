    "printWidth": 80,
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "proseWrap": "always",
    "jsxSingleQuote": false,
    "jsxBracketSameLine": false,
    "quoteProps": "as-needed",
    "htmlWhitespaceSensitivity": "css"
  },
  "lint-staged": {
    "**/*.+(js|ts|graphql|yml|yaml|vue|tsx)": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests"
